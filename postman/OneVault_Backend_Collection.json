{
  "info": {
    "_postman_id": "onevault-exhaustive-list",
    "name": "OneVault EXHAUSTIVE API (All 81)",
    "description": "Every single endpoint implemented in the OneVault Backend.\n\n### Authentication\nMost endpoints require a Bearer token. Log in first to update the `access_token` variable.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "üîê Authentication (12)",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{user_email}}\",\n  \"password\": \"OneVault@2026\",\n  \"firstName\": \"{{first_name}}\",\n  \"lastName\": \"{{last_name}}\",\n  \"mobile\": \"{{mobile}}\"\n}"
            },
            "url": "{{baseUrl}}/auth/register"
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json(); if(jsonData.accessToken) pm.environment.set('access_token', jsonData.accessToken);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{user_email}}\",\n  \"password\": \"OneVault@2026\"\n}"
            },
            "url": "{{baseUrl}}/auth/login"
          }
        },
        {
          "name": "Logout",
          "request": { "method": "POST", "url": "{{baseUrl}}/auth/logout" }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
            },
            "url": "{{baseUrl}}/auth/refresh-token"
          }
        },
        {
          "name": "Verify PIN",
          "request": {
            "method": "POST",
            "body": { "mode": "raw", "raw": "{\n  \"pin\": \"8331\"\n}" },
            "url": "{{baseUrl}}/auth/verify-pin"
          }
        },
        {
          "name": "Set PIN",
          "request": {
            "method": "POST",
            "body": { "mode": "raw", "raw": "{\n  \"pin\": \"8331\"\n}" },
            "url": "{{baseUrl}}/auth/set-pin"
          }
        },
        {
          "name": "Reset PIN",
          "request": {
            "method": "POST",
            "body": { "mode": "raw", "raw": "{\n  \"pin\": \"0000\"\n}" },
            "url": "{{baseUrl}}/auth/reset-pin"
          }
        },
        {
          "name": "Forgot Password (Request OTP)",
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{user_email}}\"\n}"
            },
            "url": "{{baseUrl}}/auth/forgot-password"
          }
        },
        {
          "name": "Reset Password (Submit OTP)",
          "request": {
            "method": "POST",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{user_email}}\",\n  \"otp\": \"123456\",\n  \"newPassword\": \"NewSecurePass@2026\"\n}"
            },
            "url": "{{baseUrl}}/auth/reset-password"
          }
        },

        {
          "name": "Get Me (Profile Info)",
          "request": { "method": "GET", "url": "{{baseUrl}}/auth/me" }
        },
        {
          "name": "Get Sessions",
          "request": { "method": "GET", "url": "{{baseUrl}}/auth/sessions" }
        },
        {
          "name": "Delete Session",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/auth/sessions/:id"
          }
        }
      ]
